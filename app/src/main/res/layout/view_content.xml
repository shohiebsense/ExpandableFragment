    android:layout_height="wrap_content"
    android:background="@color/Surface2"
    android:id="@+id/viewcontent"
    >

    <TextView
        android:id="@+id/historyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:padding="10dp"
